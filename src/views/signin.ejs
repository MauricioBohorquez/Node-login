<%- layout('layouts/main.ejs') %>

    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card mt-4 text-center">
                    <div class="card-header mt-4">
                        <h3>Login</h3>
                    </div>
                <div class="card-body">
                    <form action="/signin" method="POST">
                        <div class="from group">
                            <input type="email" name="email" placeholder="inserte el email " class="form-control">
                        </div>
                        <div class="form group">
                            <input type="password" name="password" placeholder="inserte la contraseña" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary btn.block mt-4">
                            ¡Ingresa!
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>